<header>
	<h1><%= @restaurant.name %></h1>
	<div class="fuck-alles">
		<div class="social left">
			<a href="<%= @restaurant.website %>">Website</a>
		</div>
		<div id="restaurant--logo">
			<%= image_tag @restaurant.image.thumb('100x100#').url %>

		</div>
		<div class="social right">
			<a href="<%= @restaurant.facebook %>">FB</a>
		</div>
	</div>
</header>

<section id="categories">
	<ul>
    <% @menus.each do |menu| %>
      <li class="menu-<%= menu.menu_type.name %>"><%= link_to menu.name, [@city, @restaurant, menu] %></li>
    <% end %>
	</ul>
</section>
